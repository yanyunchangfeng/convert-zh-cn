{
    "compilerOptions": {
        "baseUrl": "dist",
        "outDir": "dist",
        "skipLibCheck": true,
        "rootDir": "src",
        "lib": ["es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
        "target": "es5",
        "sourceMap": false,
        "declaration": true,
        "noImplicitReturns": true
    },
    "include": ["src/**/*.ts"]
}